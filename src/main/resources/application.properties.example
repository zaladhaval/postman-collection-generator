# ============================================================================
# Postman Collection Generator Configuration
# ============================================================================
# This file shows all available configuration options with their default values.
# Copy the properties you want to customize to your application.properties file.
#
# NOTE: This library provides only the PostmanCollectionService for programmatic access.
# There is no REST endpoint. Inject the service into your own controllers or services.
#
# Example usage:
#   @Autowired
#   private PostmanCollectionService collectionService;
#
#   public String generateCollection() {
#       return collectionService.generateCollection("http://localhost:8080");
#   }

# Enable/disable the entire library (default: true)
#postman.collection.generator.enabled=true

# ============================================================================
# Output Configuration
# ============================================================================
# Directory where the collection file will be saved (default: ./)
#postman.collection.generator.output.directory=./

# Name of the generated collection file (default: collection.json)
#postman.collection.generator.output.filename=collection.json

# ============================================================================
# Collection Metadata
# ============================================================================
# Name of the Postman collection (default: API Collection)
#postman.collection.generator.collection.name=API Collection

# Postman collection schema version (default: v2.0.0)
#postman.collection.generator.collection.schema=https://schema.getpostman.com/json/collection/v2.0.0/collection.json

# ============================================================================
# Authorization Configuration
# ============================================================================
# Enable/disable authorization header in requests (default: true)
#postman.collection.generator.authorization.enabled=true

# Name of the authorization header (default: Authorization)
#postman.collection.generator.authorization.header-name=Authorization

# Value of the authorization header - supports Postman variables (default: {{logintoken}})
#postman.collection.generator.authorization.header-value={{logintoken}}

# Type of the header (default: text)
#postman.collection.generator.authorization.header-type=text

# ============================================================================
# Base URL Configuration
# ============================================================================
# Base URL to prepend to all endpoints (optional)
# If not set, must be provided as parameter when calling generateCollection() method
#postman.collection.generator.base-url=http://localhost:8080

# ============================================================================
# Example Configurations for Different Environments
# ============================================================================

# Development Environment
#postman.collection.generator.enabled=true
#postman.collection.generator.base-url=http://localhost:8080
#postman.collection.generator.collection.name=My API - Development

# Production Environment (disabled for security)
#postman.collection.generator.enabled=false

# Custom Output Location
#postman.collection.generator.output.directory=./docs/postman
#postman.collection.generator.output.filename=api-collection-v1.json

# Custom Authorization (e.g., Bearer token)
#postman.collection.generator.authorization.header-name=Authorization
#postman.collection.generator.authorization.header-value=Bearer {{accessToken}}

# Disable Authorization Header
#postman.collection.generator.authorization.enabled=false

